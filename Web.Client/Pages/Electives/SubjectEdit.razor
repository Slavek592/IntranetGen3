<HxOffcanvas @ref="offcanvasComponent" Title="@title">
    <BodyTemplate>
        <EditForm EditContext="editContext">
            <FluentValidationValidator />
            <HxInputText @bind-Value="model.Name" Label="Název" />
            <HxInputTextArea @bind-Value="model.Description" Label="Anotace" />
            <HxInputNumber @bind-Value="model.Capacity" Label="Kapacita" />
            <TeacherMultiPicker @bind-Value="model.TeacherIds" Label="Přednášející" />
            <ScheduleTimeSlotPicker @bind-Day="model.ScheduleDayOfWeek" @bind-Slot="model.ScheduleSlotInDay" />
        </EditForm>
    </BodyTemplate>
    <FooterTemplate>
		<SaveButton EditContext="editContext" IsNew="(model.Id == default)" OnValidClick="HandleValidSubmit" />
    </FooterTemplate>
</HxOffcanvas>