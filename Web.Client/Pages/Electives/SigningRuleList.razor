@attribute [Route(Routes.Electives.SigningRuleList)]

<HxListLayout Title="Zápisová pravidla" TFilterModel="SigningRuleListQueryFilter">
    <DataTemplate>
        <HxGrid @ref="gridComponent"
                TItem="SigningRuleDto"
                DataProvider="LoadSigningRules"
                Context="item"
                Responsive="true">
            <Columns>
                <HxGridColumn TItem="SigningRuleDto" HeaderText="Název" ItemTextSelector="@(item => item.Name)" />
                <HxGridColumn TItem="SigningRuleDto" HeaderText="Ročník" ItemTextSelector="@(item => GradesDataStore.GetByKey((int)item.GradeId)?.Name)" />
                <HxGridColumn TItem="SigningRuleDto" HeaderText="Počet" ItemTextSelector="@(item => item.Quantity?.ToString())" />
                <HxGridColumn TItem="SigningRuleDto" HeaderText="Skupiny" ItemTextSelector="@(item => GetSubjectCategories(item.SubjectCategoryIds))" />
                <HxGridColumn TItem="SigningRuleDto" HeaderText="Vzdělávací oblasti" ItemTextSelector="@(item => GetSubjectTypes(item.SubjectTypeIds))" />
            </Columns>
        </HxGrid>
    </DataTemplate>
</HxListLayout>